    <profile>
      <id><%= @id %></id>
      <activation>
        <activeByDefault><%- if @active_by_default -%>true<%- else -%>false<%- end -%></activeByDefault>
      </activation>
      <properties>
<%- @properties.each do |property| -%>
        <<%= property['key'] %>><%= property['value'] %></<%= property['key'] %>>
<%- end -%>
      </properties>
      <repositories>
<%- @repositories.each do |repository| -%>
        <repository>
          <id><%= repository['id'] %></id>
          <url><%= repository['url'] %></url>
          <layout><%= repository['layout'] %></layout>
          <releases>
            <enabled><%= repository['releases'] %></enabled>
          </releases>
          <snapshots>
            <enabled><%= repository['snapshots'] %></enabled>
          </snapshots>
        </repository>
<%- end -%>
      </repositories>
      <pluginRepositories>
<%- @plugin_repositories.each do |plugin_repo| -%>
        <pluginRepository>
          <id><%= plugin_repo['id'] %></id>
          <url><%= plugin_repo['url'] %></url>
          <layout><%= plugin_repo['layout'] %></layout>
          <releases>
            <enabled><%= plugin_repo['releases'] %></enabled>
          </releases>
          <snapshots>
            <enabled><%= plugin_repo['snapshots'] %></enabled>
          </snapshots>
        </pluginRepository>
<%- end -%>
      </pluginRepositories>
    </profile>
